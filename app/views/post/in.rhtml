<% if @messages.size > 0 %>
	<table>
		<th width="10%">Verzender</th>
		<th width="70%">Onderwerp</th>
		<th width="20%">Verzonden</th>
		<% for @message in @messages %>
			<tr>
				<td>
					<%= link_to @message.sender.login, :controller => 'gebruiker', :action => 'toon', :id => @message.sender.login %>
				</td>
				<td>
					<% 
					if @message.title != ""
						message_title = @message.title
					else
						message_title = "(Zonder titel)"
					end %>
					<% if @message.read %>
						<%= link_to message_title, :action => 'toon', :id => @message %>
					<% else %>
						<b><%= link_to message_title, :action => 'toon', :id => @message %></b>
					<% end %>
				</td>
				<td>
					<%= localize( @message.created_at, format = "%d %b %Y %H:%M" )%>
				</td>
			</tr>
		<% end %>
	</table>
<% else %>
	<p>Je hebt nog geen berichten ontvangen.</p>
<% end %>