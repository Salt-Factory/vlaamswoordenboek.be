<% cache( :controller => 'definities', :action => 'prefix', :id => @begin, :part => 'lijst' ) do %>

  <% if @langer_counts.size > 0 %>
    <div class="block">
      <ol class="prefix-list">
        <% @langer_counts.each_pair do |prefix, count| %>
          <li><%= link_to "#{prefix} (#{count})", prefix_definitions_path(prefix: prefix) %></li>
        <% end %>
      </ol>
    </div>
  <% end %>

  <% if @words.size > 0 %>

    <p>De volgende <%= @words.size %> termen in onze databank beginnen met '<%=@begin%>':<p>

    <div class="prefix-columns" %>
      <% @words.each do |word| %>
        <%= link_to word, term_definitions_path(term: word) %> <br />
      <% end %>
    </div>

  <% else %>

    <p> De databank bevat geen termen die beginnen met '<%=@begin%>'</p>

  <% end %>

<% end %>
