<div class="formfield" style="border: solid #ccc 1px;margin: 0px 0px 5px 10px; padding: 0px 10px 0px 10px; background: #fff; color: #666;">
	<p><b>
		<%= reaction.title %>
	</b></p>
	<%= format_user_content(reaction.body) %>
	<div class="caption">
			Toegevoegd door <%= link_to reaction.creator.login, user_path(reaction.creator.login) %>
			op <%= localize( reaction.created_at, format = "%d %b %Y %H:%M" )%>
			<% if logged_in? %>
				<% if current_user.admin? %>
					&nbsp;|&nbsp; <span style="background-color:#f00"><%= link_to "verwijder", reaction_definitions_path(reaction_id: reaction.id), method: 'delete' %></span>
				<% end %>
			<% end %>
	</div>
</div>
